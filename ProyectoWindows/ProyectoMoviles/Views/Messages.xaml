<Window x:Class="ProyectoMoviles.Views.Messages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoMoviles.Views"
        mc:Ignorable="d"
        Title="Messages" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <ListView ItemsSource="{Binding Messages}" Margin="10" > 
        </ListView>
        <TextBox Name="MBody" VerticalAlignment="Bottom"></TextBox>
        <Button VerticalAlignment="Bottom" Click="SendMessage">Enviar</Button>
    </StackPanel>
</Window>
